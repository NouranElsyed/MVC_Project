@model IEnumerable<UserViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index">
    <div class="row my-2">
        <div class="col-8">
            <input type="text" name="searchValue" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>

    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.id)</td>
                <td>@Html.DisplayNameFor(U=>U.Name)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                <td>Details</td>
                <td>Upadte</td>
                <td>Delete</td>


            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>@user.id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@string.Join(",",user.Roles)</td>
                    @*<partial name="_ButtonPartialView" model="@user.id" />*@
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@Model" class="btn btn-warning">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@Model" class="btn btn-success ">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>



            </tr>    
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4> There is No Users :( </h4>
    </div>
}
