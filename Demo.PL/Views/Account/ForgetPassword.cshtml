@model ForgetPasswordViewModel;
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/signin-image.jpg" alt="sing up image"></figure>
                <a asp-action="Register" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form asp-action="SendEmail" class="register-form" id="login-form">
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" id="email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>        
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Reset Password" />
                    </div>
                </form>
         
            </div>
        </div>
    </div>
</section>
@section Validation
{
    <partial name="_ValidationScriptsPartial" />
}



