@model EmployeeViewModel;
@{
    ViewData["Title"] = "Delete";
}


<h1>Are you sure that you want to delete @Model.Name ?</h1>
<form asp-action="Delete">
    <div class="form-group">
        <img src="~\files\Images\@Model.ImageName" class="rounded-circle" width="100px" alt="" />
        <input asp-for="ImageName" hidden />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input readonly asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input readonly asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input readonly asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input readonly asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input readonly asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div class="form-group">
        <input readonly asp-for="IsActive" class="form-control d-inline" />
        <label asp-for="IsActive" class="col-form-label"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>

    </div>
    <div class="form-group">

        <label asp-for="HiringDate" class="col-form-label"></label>
        <input readonly asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
