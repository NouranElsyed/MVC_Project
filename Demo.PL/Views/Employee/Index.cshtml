@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
}

<form  asp-action="Index">
    <div class="row my-2">
        <div class="col-8">
            <input type="text" name="InputSearch" class="form-control" />
        </div>
        <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success"/>
        </div>

    </div>
</form>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>
@if (TempData["Message"]!=null)
{
    <p class="alert alert-info text-black" id="tempMessage">@TempData["Message"]</p>
}


<br />
<br />

@if (Model.Count() > 0)
{
    <h1>Employees Info.</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Name)</th>
                <th>@Html.DisplayNameFor(E=>E.Age)</th>
                <th>@Html.DisplayNameFor(E=>E.department)</th>
                <th>@Html.DisplayNameFor(E=>E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.department?.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.Salary</td>
                    <td>@employee.IsActive</td>
                    <td>@employee.HiringDate</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>  Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>  Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>  Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4> There is No Emplyee :( </h4>
    </div>
}
<script>
   
    $(document).ready(function () {
       
        setTimeout(function () {
            $("#tempMessage").fadeOut(2000);
        }, 5000); 
    });
</script>
