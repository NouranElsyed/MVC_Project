@model IEnumerable<RoleViewModel>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Index">
    <div class="row my-2">
        <div class="col-8">
            <input type="text" name="searchValue" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>

    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Upadte</td>
                <td>Delete</td>


            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <td>
                        <a asp-controller="Role" asp-action="Details" asp-route-id="@Role.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@Role.Id" class="btn btn-success ">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@Role.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>



                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4> There is No Roles :( </h4>
    </div>
}

